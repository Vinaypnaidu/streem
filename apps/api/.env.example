ENV=development

DATABASE_URL=postgresql+psycopg://streemm:streemm@localhost:5432/streemm_dev
REDIS_URL=redis://localhost:6379/0

SESSION_SECRET=REPLACE_WITH_SECURE_RANDOM
SESSION_COOKIE_NAME=sid
SESSION_TTL_SECONDS=604800
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Object storage
S3_ENDPOINT=http://localhost:9000
S3_PUBLIC_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_REGION=us-east-1
S3_BUCKET=media
S3_USE_SSL=false

# Presigned upload
PRESIGN_EXPIRES_SECONDS=900
UPLOAD_MAX_BYTES=1073741824
UPLOAD_ALLOWED_MIME=video/mp4

# Worker / FFmpeg
FFMPEG_BIN=ffmpeg
FFPROBE_BIN=ffprobe
FFPROBE_TIMEOUT_SECONDS=30
FFMPEG_TIMEOUT_720P_SECONDS=1200
FFMPEG_TIMEOUT_480P_SECONDS=900
THUMBNAIL_TIMEOUT_SECONDS=30
WORKER_LOCK_TTL_MS=900000
WORKER_BACKOFF_SECONDS=30,120,300